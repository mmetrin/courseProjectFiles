    @section scripts{
        <script type="text/javascript">
            $(function () {
                $('a[href^="#"]').on('click', function (event) {
                    event.preventDefault();

                    var sc = $(this).attr("href"),
                        dn = $(sc).offset().top;
                    $('html, body').animate({
                        scrollTop: dn
                    }, 1000);
                });
            });

            $(function () {
                $('a[name^="#"]').on('click', function (event) {
                    event.preventDefault();

                    var sc = $(this).attr("name"),
                        dn = $(sc).offset().top;
                    $('html, body').animate({
                        scrollTop: dn
                    }, 1000);
                });
            });
        </script>
    }
  
