@model IEnumerable<test1.Models.Products>


@if (Model != null)
{
    <div class="row catalog d-flex justify-content-center">
        @foreach (var item in Model)
        {
            <div class="slider__item col-lg-3  col-md-5 col-6 element-animation">
                <img src="~/img/@Html.DisplayFor(modelItem => item.img_product)" />

                <div class="header-column">
                    <h4 class="my-2">@Html.DisplayFor(modelItem => item.product_name)</h4>
                    @*<h3>@Html.DisplayFor(modelItem => item.price.ToString().Remove(3)<i class="fas fa-ruble-sign"></i></h3>*@
                    @{
                        var price = Html.DisplayFor(modelItem => item.price);
                        string priceStr = Convert.ToString(price).Remove(3);

                    }
                    <h3>@priceStr<i class="fas fa-ruble-sign"></i></h3>

                    <a class="popup-link">
                        <p class="text-right" name="@Html.DisplayFor(modelItem => item.id_product)" onclick="AddText(this)">Подробнее ></p>
                    </a>
                </div>
            </div>

        }

    </div>
}
