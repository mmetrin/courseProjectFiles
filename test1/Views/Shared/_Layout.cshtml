<!DOCTYPE html>
<html lang="ru">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Кондитерский магазин "Patetico"</title>
    <link rel="icon" href="~/img/berry.ico" sizes="32x32" type="image/x-icon">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@300;400;500;600;700&display=swap" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300;400;500;600;700&family=Cormorant+Unicase:wght@300;400;500;600;700&display=swap"
          rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css"
          integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">

    @Styles.Render("~/Content/styles.css")

    @Styles.Render("~/Content/datepicker.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div id="popup" class="popup">
        <div class="popup__body">
            <div class="popup__content">
                <a href="" class="popup__close close-popup"><i class="fas fa-times"></i></a>
                <div class="form-vertical">

                    <div class="popup__title  element-animation">Авторизация</div>
                    <hr noshade />
                    <div class="popup__text  element-animation">
                        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-horizontal span-aut">

                                <div class="form-group">
                                    <div>
                                        <input placeholder="Введите эл. почту" type="email" class="" name="email"
                                               id="InpLogin" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div>
                                        <input placeholder="Введите пароль" type="password" class="" name="password"
                                               id="InpPass" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div>
                                        <input type="button" value="Войти" class="input-btn" id="checkUser" />
                                    </div>
                                </div>

                            </div>
                        }

                        <div class="a-reg">
                            <a href="#popup_2" class="popup-link"><span class="a-color">У вас нет учетной записи?</span> Зарегистрируйтесь!</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="popup_2" class="popup">
        <div class="popup__body">
            <div class="popup__content">
                <a href="" class="popup__close close-popup"><i class="fas fa-times"></i></a>
                <div class="popup__title  element-animation">Регистрация</div>
                <hr noshade />
                <div class="popup__text  element-animation">
                    @using (Html.BeginForm("Create", "Home", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="row form-vertical-reg text-center">
                            <input placeholder="Имя" type="text" class="col-lg-5 col-md-5 col-10" name="name" id="InpName" />
                            <input placeholder="Фамилия" type="text" class="col-lg-5 col-md-5 col-10" name="surname" id="InpSurname" />
                            <input placeholder="Отчество" type="text" class="col-lg-5 col-md-5 col-10" name="patronymic"
                                   id="InpPatronymic" />
                            <input placeholder="Номер телефона" type="text" class="col-lg-5 col-md-5 col-10" name="phone" id="InpPhone" />

                            <input placeholder="Дата рождения" type="text" class=" txt datepicker-here col-lg-5 col-md-5 col-10"
                                   name="date_of_birth" id="InpDate" readonly="readonly"
                                   data-date-format="yyyy-mm-dd" />
                            <input placeholder="Email" type="email" class="col-lg-5 col-md-5 col-10" name="email" id="InpEmail" />
                            <input placeholder="Пароль" type="password" class="col-lg-5 col-md-5 col-10" name="password" id="InpPassword" />
                            <input placeholder="Повтор пароля" type="password" class="col-lg-5 col-md-5 col-10" name="passwordrepeat"
                                   id="RepeatPass" />
                        </div>
                        <div class="inp-btn">
                            <input class="input-btn" type="button" value="Зарегистрироваться" id="createUser" />
                        </div>
                        <div class="hr-bottom">
                            <hr noshade style="margin-bottom:0.5em; height:0.01px" />
                            <p>*все поля обязательны для заполнения</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div id="popup_exit" class="popup">
        <div class="popup__body">
            <div class="popup__content">
                <a href="" class="popup__close close-popup"><i class="fas fa-times"></i></a>
                <div class="form-vertical">
                    <div class="popup__title  element-animation">Выход</div>
                    <hr noshade />
                    <div class="popup__text  element-animation">

                        <div class="form-horizontal span-aut text-center">

                            <div class="form-group">
                                <div>
                                    <h5>Вы уверены, что хотите выйти из аккаунта?</h5>
                                </div>
                            </div>
                            <div class="form-group">
                                <div>
                                    <button name="exit" class="input-btn">Выйти из аккаунта</button>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>


    <div id="popup_basket" class="popup">
        <div class="popup__body">
            <div class="popup__content">
                <a href="" class="popup__close close-popup"><i class="fas fa-times"></i></a>
                <div class="form-vertical">

                    <div class="popup__title element-animation">Корзина не доступна!</div>
                    <hr noshade />
                    <div class="popup__text text-center  element-animation">
                        <div class="form-horizontal span-aut">
                            <h6>Для перехода к корзине товаров Вам нужно авторизоваться. <br /> Сделайте это прямо сейчас!</h6>
                        </div>
                        <div>
                            <button href="#popup" class="input-btn popup-link">Войти в аккаунт</button>
                        </div>
                        <div class="a-reg">
                            <a href="#popup_2" class="popup-link"><span class="a-color">У вас нет учетной записи?</span> Зарегистрируйтесь!</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="order__basket" class="popup">
        <div class="popup__body">
            <div class="popup__content">
                <a href="" class="popup__close close-popup"><i class="fas fa-times"></i></a>
                <div class="form-vertical">
                    <div class="popup__title element-animation">Возникла ошибка!</div>
                    <hr noshade />
                    <div class="popup__text text-center  element-animation">
                        <div class="form-horizontal span-aut">
                            <h6>Ваша корзина пуста! Чтобы оформить заказ, пополните корзину. <br /> Сделайте это прямо сейчас!</h6>
                        </div>
                        <div>
                            <button href="/Products/Index" class="input-btn popup-link">Перейти в каталог</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="popup_addproduct" class="popup">
        <div class="popup__body">
            <div class="popup__content">
                <a href="" class="popup__close close-popup"><i class="fas fa-times"></i></a>
                <div class="form-vertical">

                    <div class="popup__title  element-animation">Добавление товара</div>
                    <hr noshade />
                    <div class="popup__text text-center  element-animation">
                        <div class="form-horizontal span-aut">
                            <h5>Товар успешно добавлен в корзину!</h5>
                        </div>
                        <div style="margin-bottom:2rem; margin-left:1rem; margin-right:1rem">
                            <button name="popup_addproduct" class="input-btn ">Понятно, спасибо!</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="popup_basket10" class="popup">
        <div class="popup__body">
            <div class="popup__content">
                <a href="" class="popup__close close-popup"><i class="fas fa-times"></i></a>
                <div class="form-vertical">

                    <div class="popup__title  element-animation">Ой, возникла ошибка..</div>
                    <hr noshade />
                    <div class="popup__text text-center  element-animation">
                        <div class="form-vertical-reg">
                            <h5>В корзине может быть максимум 10 позиций товара! <br /> В Вашей корзине уже есть несколько, <br /> можете добавить еще <span id="MaxAmount"></span> позиции(й)! :)</h5>
                        </div>
                        <div style="margin-bottom:1rem">
                            <button name="popup_basket10" class="input-btn">Понятно, спасибо!</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div id="popup_delete_product" class="popup">
        <div class="popup__body">
            <div class="popup__content">
                <a href="" class="popup__close close-popup"><i class="fas fa-times"></i></a>
                <div class="form-vertical">

                    <div class="popup__title  element-animation">Ой, возникла ошибка..</div>
                    <hr noshade />
                    <div class="popup__text text-center  element-animation">
                        <div class="form-horizontal span-aut">
                            <h6>В Вашей корзине уже есть несколько позиций этого товара. <br /> Вы можете добавить еще <span id="MaxAmount"></span> товаров! :)</h6>
                        </div>
                        <div>
                            <button name="popup_delete_product" class="input-btn">Да, удалить товар!</button>
                        </div>
                        <div class="a-reg">
                            <a class="popup-link"><span class="a-color">*отменить это действие невозможно.</span></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="popup_details" class="popup">
        <div class="popup__body">
            <div class="popup__content">
                <a href="" class="popup__close close-popup"><i class="fas fa-times"></i></a>
                <div class="form-vertical">

                    <div class="popup__title  element-animation">Подробнее о товаре</div>
                    <hr noshade />
                    <div class="popup__text  element-animation" id="body_content">
                    </div>
                </div>
            </div>
        </div>
    </div>




    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand js-scroll-trigger" href="/Home/Index/#page-top">
                <img src="~/img/navbar-logo.svg"
                     alt="..." />
            </a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse"
                    data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false"
                    aria-label="Toggle navigation">
                Меню
                <i class="fas fa-bars ml-1"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">

                    @if (HttpContext.Current.User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#about">О&nbsp;нас</a></li>
                        <li class="nav-item">
                            <a class="nav-link js-scroll-trigger" href="/Products/Index/">Каталог</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link js-scroll-trigger" href="/Home/Index/#reviews-sect-id">Отзывы</a>
                        </li>
                        <li class="nav-item"><a class="nav-link js-scroll-trigger" href="/Home/Index/#contact-id">Контакты</a></li>
                        <li class="nav-item" id="nav-item-margin">
                            <a class="nav-link js-scroll-trigger"
                               id="nav-item-margin icon-basket" href="/BasketProducts/Index">
                                Корзина&nbsp;<i class="fas fa-shopping-basket"></i>
                            </a>
                        </li>
                        <li class="nav-item nav-none" id="nav-item-margin">
                            <a class="nav-link js-scroll-trigger popup-link"
                               id="nav-item-margin user " href="#popup_exit"><i class="fas fa-sign-out-alt"></i></a>
                        </li>
                        <li class="nav-item nav-none-909" id="nav-item-margin">
                            <a href="#popup_exit" class="nav-link js-scroll-trigger user popup-link"
                               id="nav-item-margin">Выйти из аккаунта</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link js-scroll-trigger" href="/Home/Index/#about">О&nbsp;нас</a></li>
                        <li class="nav-item">
                            <a class="nav-link js-scroll-trigger" href="/Products/Index">Каталог</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link js-scroll-trigger" href="/Home/Index/#reviews-sect-id">Отзывы</a>
                        </li>
                        <li class="nav-item"><a class="nav-link js-scroll-trigger" href="/Home/Index/#contact-id">Контакты</a></li>
                        <li class="nav-item" id="nav-item-margin">
                            <a class="nav-link js-scroll-trigger popup-link"
                               id="nav-item-margin icon-basket" href="#popup_basket">
                                Корзина&nbsp;<i class="fas fa-shopping-basket"></i>
                            </a>
                        </li>
                        <li class="nav-item nav-none" id="nav-item-margin">
                            <a class="nav-link js-scroll-trigger popup-link"
                               id="nav-item-margin user " href="#popup"><i class="fas fa-user"></i></a>
                        </li>
                        <li class="nav-item nav-none-909" id="nav-item-margin">
                            <a class="nav-link js-scroll-trigger user popup-link"
                               id="nav-item-margin" href="#popup">Авторизация</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>


